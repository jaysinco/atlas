{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/test",
            "args": [],
            "environment": [],
            "cwd": "${workspaceFolder}/bin",
            "stopAtEntry": false,
            "logging": {
                "moduleLoad": true,
                "trace": false
            },
            "windows": {
                "type": "cppvsdbg",
            },
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
                "miDebuggerPath": "/usr/bin/gdb"
            },
        }
    ]
}