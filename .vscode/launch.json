{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++: Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/x86_64-debug/asm",
            "args": [],
            "environment": [],
            "cwd": "${workspaceFolder}/bin/x86_64-debug",
            "stopAtEntry": false,
            "logging": {
                "moduleLoad": true,
                "trace": false
            },
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
                "miDebuggerPath": "/usr/bin/gdb"
            },
        },
        {
            "name": "CUDA C++: Launch",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/aarch64-debug/cuda-samples"
        },
        {
            "name": "Python: Launch",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/pypi",
        },
        {
            "name": "Flutter: Launch",
            "type": "dart",
            "request": "launch",
            "program": "${workspaceFolder}/src/flt/lib/main.dart"
        },
    ]
}